
    <!-- //////////////CODE CHO MÀN HÌNH HỆ THỐNG////////////// -->
    <div id = "system_screen">
        <!-- //////////////tạo SYSMBOL////////////// -->
        <img src="images/system_screen.png">
        <!-- Tạo sysmbol motor -->
        <img id = "system_screen_motor" ><script> fn_SymbolStatus("system_screen_motor", "motor", "Bom_Light") </script>
