        <!-- //////////////tạo NÚT NHẤN////////////// -->
        <!-- Nút nhấn START -->
        <button id="btt_START_mode" onclick= "socket.emit('cmd_START', true);">START</button>
        <script>
            // Hiển thị trạng thái nút nhấn (ON = XANH, Off = Nâu)
            socket.on("Start_Light",function(data){
            if(data == false){
                document.getElementById('btt_START_mode').style.backgroundColor = 'gray';
            } else{
                document.getElementById('btt_START_mode').style.backgroundColor = 'rgb(15, 228, 61)'; 
            }
            });
        </script>

